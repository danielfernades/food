{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"require": {
		"laravel/framework": "4.0.*",

        "robloach/component-installer": "dev-master",
        "components/jquery": "dev-master",
        "components/jqueryui": "dev-master",
        "components/bootstrap": "dev-master",
        "components/underscore": "dev-master",
        "components/font-awesome": "dev-master"
    },

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/lib",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests"
		],
        "files": [
            "app/lib/helpers/view.php"
        ]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
        "component-dir": "public/packages",
        "component-baseurl": "/packages",
        "preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
